@model List<BookPlatformMVC.Models.Review>
@{
    ViewData["Title"] = "Reviews";
    var bookId = ViewBag.BookId as int? ?? 0;
}

<h2>Reviews</h2>
@if (Model != null && Model.Any())
{
    foreach (var review in Model)
    {
       <div>
    <strong>@(review.User?.UserName ?? "Anonymous")</strong> reviewed 
    <em>@(review.Book?.Title ?? "Unknown Book")</em> - @review.Rating/5
    <p>@review.Content</p>
</div>

    }
}
else
{
    <p>No reviews yet.</p>
}
