@model List<BookPlatformMVC.Models.Book>
@{
    ViewData["Title"] = "Browse Books";
}

<h2>Browse Books</h2>

<div class="mb-3">
    <a asp-controller="Book" asp-action="Import" class="btn btn-primary">
        Import or Add New Book
    </a>
</div>

<!-- Display Success or Error Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<form asp-action="Index" method="get" class="mb-4">
    <div class="input-group">
        <input type="text" name="searchString" class="form-control" placeholder="Search for books..." />
        <button class="btn btn-primary" type="submit">Search</button>
    </div>
</form>

@if (Model.Count == 0)
{
    <p>No books found.</p>
}
else
{
    <div class="row">
        @foreach (var book in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card h-100">
                    <img src="@(string.IsNullOrEmpty(book.ImagePath) ? Url.Content("~/images/default-book.png") : book.ImagePath)" class="card-img-top" alt="@book.Title" style="height: 300px; object-fit: cover;" />
                    <div class="card-body">
                        <h5 class="card-title">@book.Title</h5>
                        <p class="card-text"><strong>Author:</strong> @book.Author</p>
                        <p class="card-text"><strong>Pages:</strong> @book.PageCount</p>
                        <p class="card-text"><strong>Rating:</strong> @book.AverageRating / 5</p>
                        <p class="card-text">@book.Description?.Substring(0, Math.Min(book.Description.Length, 100))...</p>

                        <!-- Add to Bookshelf Form -->
                        <form asp-controller="Bookshelf" asp-action="Add" method="post">
                            <input type="hidden" name="bookId" value="@book.Id" />
                            <select name="status" class="form-select mb-2">
                                <option value="ToRead">To Read</option>
                                <option value="Reading">Reading</option>
                                <option value="Read">Read</option>
                                <option value="Owned">Owned</option>
                            </select>
                            <button type="submit" class="btn btn-success w-100">Add to Bookshelf</button>
                        </form>

                        <!-- Review Form -->
                        <form asp-controller="Review" asp-action="Create" method="post" class="mt-3">
                            <input type="hidden" name="bookId" value="@book.Id" />
                            <textarea name="Content" class="form-control" placeholder="Write your review..."></textarea>
                            <input type="number" name="Rating" min="1" max="5" step="0.5" class="form-control mt-2" placeholder="Rate 1-5">
                            <button type="submit" class="btn btn-primary mt-2">Submit Review</button>
                        </form>

                        <!-- Display Reviews -->
                        @if (book.Reviews.Any())
                        {
                            <h6>Reviews:</h6>
                            @foreach (var review in book.Reviews)
                            {
                                <p><strong>Rating:</strong> @review.Rating / 5</p>
                                <p>@review.Content</p>
                                <hr />
                            }
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}